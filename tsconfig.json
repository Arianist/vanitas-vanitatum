{
    "compilerOptions": {
        "jsx": "react",
        "lib": [
            "es6",
            "dom"
        ],
        "rootDir": "src",
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2017",
        "sourceMap": true,
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}